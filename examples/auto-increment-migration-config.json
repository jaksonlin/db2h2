{
  "source": {
    "type": "mysql",
    "host": "localhost",
    "port": 3306,
    "database": "production_db",
    "username": "user",
    "password": "password",
    "ssl": false
  },
  "target": {
    "type": "h2",
    "file": "./test-db.h2.db",
    "mode": "file",
    "compression": false
  },
  "migration": {
    "tables": ["users", "orders", "order_items", "products"],
    "excludeTables": ["temp_*", "log_*"],
    "batchSize": 1000,
    "preserveData": true,
    "constraints": {
      "preserveForeignKeys": true,
      "preserveIndexes": true,
      "preserveTriggers": false,
      "preserveSequences": true,
      "disableAutoIncrementDuringMigration": true
    },
    "data": {
      "maxRows": null,
      "sampleData": false,
      "validateData": true,
      "anonymizeData": false
    }
  },
  "output": {
    "generateReport": true,
    "reportFile": "./migration-report.html",
    "logLevel": "INFO",
    "exitOnError": true
  }
}
